            </configuration>
          </execution>
          <execution>
            <id>sleep-for-a-while</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <sleep seconds="5" />
              </target>
            </configuration>
          </execution>
        </executions>
